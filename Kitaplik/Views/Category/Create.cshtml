@model Category
@{
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-success w-100">Create</button>
            </div>
            <div class="col-6 text-center">
                <a asp-controller="Category" asp-action="Index" text-align:center">Back to category list</a>
            </div>
        </div>
    </div>
</form>