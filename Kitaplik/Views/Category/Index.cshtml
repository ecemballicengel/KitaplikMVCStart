@model IEnumerable<Category>
<partial name="_Notification" />

<h1 class="text-center mb-3" >Kategoriler Sayfasi</h1>
<a asp-controller="Category" asp-action="Create" class="btn btn-success mb-2"> Create a New Category</a>
<table class="table table-bordered table-primary table-striped table-hover w-100 m-auto">
    <thead>
        <tr>
            <th>CategoryName</th>
            <th>Category Display Order</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
       @*  React taki map leme *@
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="30%">@item.DisplayOrder</td>
                <td>
                    <div class="btn-group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>
                    </div>
                </td>
            </tr>
            
        }
        
    </tbody>
</table>
